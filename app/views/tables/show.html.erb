<div class="centered">
  <h1>作業割当</h1>
</div>
<div class="centered">
  <h3>
    タイトル：<%= @table.title %>
  </h3>
</div>
<div class="centered">
  <table class="sagyouwariate">
    <thead>
      <tr>
        <th>時間</th>
        <th>定時業務</th>
        <th>納品業務</th>
        <th>商品管理業務</th>
        <th>清掃業務</th>
      </tr>
    </thead>
      <tbody>
        <% @rows.each_with_index do |row, num| %>
          <tr>
            <td>
              <%= render 'tables/row_time', num: num %>
            </td>
            <td>
              <%= row.regular_work %>
            </td>
            <td>
              <%= row.deliver_work %>
            </td>
            <td>
              <%= row.product_management_work %>
            </td>
            <td>
              <%= row.cleaning_work %>
            </td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
