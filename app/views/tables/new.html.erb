<%= form_with model: @table do |f| %>
  <div class="container">
    <h1>作業割当</h1>
  </div>
  <div class="container">
    <h3>
      <%= f.label :name ,"タイトル" %>：<%= f.text_field :title %>　<%= f.submit "保存"%>
    </h3>
  </div>
  <div class="container">
    <table class="sagyouwariate">
      <thead>
        <tr>
          <th>時間</th>
          <th>定時業務</th>
          <th>納品業務</th>
          <th>商品管理業務</th>
          <th>清掃業務</th>
        </tr>
      </thead>
        <tbody>
          <% 96.times do |num|%>
            <tr>
              <td>
                <%= render 'tables/row_time', num: num %>
              </td>
              <td>
                <%= render 'tables/row_regular_work', num: num, f: f %>
              </td>
              <td>
                <%= render 'tables/row_deliver_work', num: num, f: f %>
              </td>
              <td>
                <%= render 'tables/row_product_management_work', num: num, f: f %>
              </td>
              <td>
                <%= f.text_field :@column_d, list: "cleaning_work", class: "text_field" %>
                <datalist id="cleaning_work">
                  <% @cleaning_works.each do |cleaning_work| %>
                    <option value="<%= cleaning_work.name %>　(<%= cleaning_work.time_required %>分)">
                  <% end %>
                </datalist>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
<% end %>
