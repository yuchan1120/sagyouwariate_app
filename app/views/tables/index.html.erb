<div class="centered">
  <h1 class="margin_bottom_50px">作業割当</h1>
</div>
<div class="centered">
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>
</div>
<div class="centered">
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>タイトル</th>
        <th>更新日</th>
        <th>作成日</th>
        <th>参照</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @tables.each do |table| %>
        <tr>
          <td><%= table.id %></td>
          <td><%= table.title %></td>
          <td><%= table.updated_at.to_s(:datetime_jp) %></td>
          <td><%= table.created_at.to_s(:datetime_jp) %></td>
          <td>
            <%= link_to "参照", table, class: "immutable_color_link" %>
          </td>
          <td>
            <%= link_to "編集", [:edit, table], class: "immutable_color_link" %>
          </td>
          <td>
            <%= link_to "削除", table, method: :delete, data: { confirm: "本当に削除しますか？" }, class: "immutable_color_link" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
